<?xml version="1.0" encoding="utf-8"?>
<com.gaofei.app.widget.MyLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.gaofei.app.widget.MyTextView
        android:id="@+id/text"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:background="#f6f6"
        android:paddingLeft="10dp" />

    <com.gaofei.app.widget.MyView
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:background="#e8e8e8" />

</com.gaofei.app.widget.MyLinearLayout>