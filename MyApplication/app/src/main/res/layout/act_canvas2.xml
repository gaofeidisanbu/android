<?xml version="1.0" encoding="utf-8"?>


<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="@dimen/new_task_root_width"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/taskPath"
        android:layout_width="match_parent"
        android:layout_height="992dp"
        android:background="@drawable/task_illus_bg">


        <include
            android:id="@+id/treasureBox1"
            layout="@layout/task_treasure_box_icon"
            android:layout_width="@dimen/task_treasure_box_icon_width"
            android:layout_height="124dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="42dp"
            android:layout_marginTop="96dp" />

        <include
            android:id="@+id/treasureBox2"
            layout="@layout/task_treasure_box_icon"
            android:layout_width="116dp"
            android:layout_height="124dp"
            app:layout_constraintTop_toBottomOf="@+id/treasureBox1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="120dp" />

        <include
            android:id="@+id/treasureBox3"
            layout="@layout/task_treasure_box_icon"
            android:layout_width="116dp"
            android:layout_height="124dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/treasureBox2"
            android:layout_below="@+id/treasureBox2"
            android:layout_marginRight="42dp"
            android:layout_marginTop="120dp" />


        <include
            android:id="@+id/treasureBox4"
            layout="@layout/task_treasure_box_icon"
            android:layout_width="116dp"
            android:layout_height="124dp"
            app:layout_constraintTop_toBottomOf="@+id/treasureBox3"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="120dp" />
    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>