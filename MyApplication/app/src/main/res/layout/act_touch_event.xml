<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <com.gaofei.app.widget.MyFrameLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.gaofei.app.widget.MyLinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.gaofei.app.widget.MyView
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/yc_red1" />

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/yc_red2" />
        </com.gaofei.app.widget.MyLinearLayout>

        <com.gaofei.app.widget.MyLinearLayout
            android:id="@+id/ll2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/yc_red3" />

            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/yc_red4" />
        </com.gaofei.app.widget.MyLinearLayout>
    </com.gaofei.app.widget.MyFrameLayout>

</layout>